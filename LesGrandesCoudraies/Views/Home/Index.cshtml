@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height:100%">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienvenue sur les site des grandes coudraies</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/dto")
    @Scripts.Render("~/bundles/viewmodel")
    <style>
        .carousel-page {
            width: 100%;
            height: 100%;
            background-color: #5f666d;
            color: white;
        }
    </style>

</head>
<body style="height:100%; ">
    <script>
        $(function () {
            var articleViewModel = new ArticleViewModel();
            articleViewModel.GetIndexArticles();
            ko.applyBindings(articleViewModel, document.getElementById("news"));
        });
    </script>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Les grandes coudraies", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container" style="height:100%; margin-top:1%;">
        <div class="row" style="height:45%;">
            <div class="col-lg-5 col-md-5 colWelcome">
                <div class="bckYellow" style="height:100%; color:#595959; padding-top:50px; padding-left:5px; padding-bottom:50px;">
                    <div style="font-size:3em; font-weight:900;">BIENVENUE</div>
                    <div style="font-size:2em; font-weight:600; margin-top:50px; margin-left:5px;">Sur le site de la Résidence des Grandes Coudraies</div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 colWelcome">
                <div class="bckLightGrey" style="height:100%; background-image:url('@(ViewBag.RootDomain)Images/AccueilHautDroite.jpg');background-size: 100% 100%; background-repeat: no-repeat;  ">
                </div>
            </div>
        </div>
        <div class="row" style="height:45%; margin-top:1%;">
            <div class="col-lg-4 col-md-4 colWelcome">
                <div class="bckLightGrey" style="height:100%; background-image:url('@(ViewBag.RootDomain)Images/AccueilBasGauche.png');background-size: 100% 100%; background-repeat: no-repeat;  ">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 colWelcome">
                <div class="bckDarkGrey" style="height:100%;">
                    <div id="news" class="carousel slide" style="height:100%" data-ride="carousel">
                        <!-- Bulles -->
                        <ol class="carousel-indicators" data-bind="foreach: articles">
                            <li data-target="#my_carousel" data-bind="attr: { 'data-slide-to': Counter, class: Class }"></li>
                        </ol>
                        <!-- Slides -->
                        <div class="carousel-inner" style="height:100%" data-bind="foreach: articles">
                            <!-- Page 1 -->
                            <div data-bind="attr: { class: 'item ' + Class }" style="height:100%">
                                <div class="carousel-page">
                                </div>
                                <div class="carousel-caption" data-bind="text:Title"></div>
                            </div>
                        </div>
                        <!-- Contrôles -->
                        <a class="left carousel-control" href="#news" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#news" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>

                </div>
            </div>
            <div class="col-lg-2 col-md-2 colWelcome">
                <div class="bckLightGrey linkWelcomContainer" onclick="document.location.href = '@(ViewBag.RootDomain)Section/News';">
                    <div class="linkWelcome">Actualités</div>
                </div>
                <div class="bckKaki linkWelcomContainer" onclick="document.location.href = '@(ViewBag.RootDomain)Section/Residence';">
                    <div class="linkWelcome" style="color:#DED7D4 ">Les Coudraies</div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 colWelcome">
                <div class="bckDarkGrey linkWelcomContainer">
                    <div class="linkWelcome" style="color:white; " onclick="document.location.href = '@(ViewBag.RootDomain)Section/Syndic';">Syndic</div>
                </div>
                <div class="bckBlack linkWelcomContainer">
                    <div class="linkWelcome" style="color:#FFC000 " onclick="document.location.href = '@(ViewBag.RootDomain)Section/Contacts';">Nous contacter </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer"></footer>

    <div class="modal fade" id="popup-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                    <h4 class="modal-title" id="myModalLabel">Connectez vous</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Entrer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="popup-register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
