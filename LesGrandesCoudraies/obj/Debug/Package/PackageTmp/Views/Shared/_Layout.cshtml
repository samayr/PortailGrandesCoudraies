<!DOCTYPE html>
<html style="height:100%">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@(ViewBag.RootDomain)Content/SectionCommon.css" rel="stylesheet"></link>
    <link href="@(ViewBag.RootDomain)Content/Section@(ViewBag.Config).css" rel="stylesheet"></link>
</head>
<body style="height:100%">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Les grandes coudraies", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container" style="height:25%;">
        <div class="row" style="height:100%;">
            <div class="col-lg-12 col-md-12 colWelcome">
                <div style="height:100%; background-image:url('@(ViewBag.RootDomain)Images/Bandeau@(ViewBag.Config).jpg');background-size: 100% 100%; background-repeat: no-repeat;  ">
                    <div style="display:table; width:100%; height:100%; ">
                        <div style="display:table-cell; font-family:Arial; font-size:3em; font-weight:900;vertical-align:middle; padding-right:10px;">
                            <span class="SectionTitle" style="float:right;">@ViewBag.SectionName</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container body-content" style="height:75%;">
        <div class="row" style="height:100%;">
            <div class="col-lg-3 MenuSectionBackground" style="height:100%;">
                <ul class="MenuSection">
                    <li class="MenuSectionItem">
                        <div>One</div>
                    </li>
                    <li class="MenuSectionItem">
                        <div>Two</div>
                    </li>
                    <li class="MenuSectionItem">
                        <div>Three</div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
